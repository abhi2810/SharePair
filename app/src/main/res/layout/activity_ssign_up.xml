<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.sharepair.SSignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp">

        <EditText
            android:padding="20dp"
            android:id="@+id/editTextSname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:singleLine="false" />

        <EditText
            android:padding="20dp"
            android:id="@+id/editTextSRoll"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextSname"
            android:ems="10"
            android:hint="Roll ID"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextSyear"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Course Year"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:layout_below="@+id/editTextSRoll"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />

        <EditText
            android:padding="20dp"
            android:id="@+id/editTextSusername"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editTextSyear"
            android:layout_alignRight="@+id/editTextSyear"
            android:layout_below="@+id/editTextSyear"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:padding="15dp"

            android:id="@+id/editTextSPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextSusername"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName" />

        <EditText
            android:padding="15dp"
            android:id="@+id/editTextSpass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextSPassword"
            android:ems="10"
            android:hint="Re-Enter Password"
            android:inputType="textPersonName" />

        <Button
            android:padding="15dp"
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_below="@+id/editTextSpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:onClick="signup"/>






















    </RelativeLayout>

</ScrollView>
